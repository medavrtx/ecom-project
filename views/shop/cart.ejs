<% layout('layouts/boilerplate')%>

<% if (products.length > 0) { %>
<!-- LOADED CART -->
<div class="container-md mt-5">
  <h2>Your Cart</h2>
  <table class="table mt-3">
    <thead>
      <tr>
        <th scope="col-1">Product</th>
        <th scope="col" class="d-none d-md-table-cell"></th>
        <th scope="col">Quantity</th>
        <th scope="col" class="text-end">Total</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(p => { %>
      <tr>
        <!-- IMAGE -->
        <td class="col-1 d-none d-md-table-cell">
          <div class="cart-product-image">
            <img
              src="<%= p.productId.image %>"
              alt="<%= p.productId.title %>"
            />
          </div>
        </td>

        <!-- DETAILS -->
        <td>
          <p><%= p.productId.title %></p>
          <p class="cart-product-price">$<%= p.productId.price %></p>
        </td>

        <!-- QUANTITY -->
        <td>
          <div class="d-flex">
            <button
              class="quantity-btn btn btn-outline-dark me-2"
              data-action="decrease"
            >
              -
            </button>
            <form
              class="cart-product-update quantity-btn"
              id="quantity-form"
              action="/cart-update-item"
              method="POST"
            >
              <input
                type="hidden"
                value="<%= p.productId._id %>"
                name="productId"
              />
              <input
                name="qty"
                class="quantity-input cart-product-qty"
                id="numberInput"
                value="<%= p.quantity %>"
                min="0"
              />
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            </form>
            <button
              class="quantity-btn btn btn-outline-dark ms-2"
              data-action="increase"
            >
              +
            </button>

            <!-- DELETE -->
            <form
              class="cart-product-delete"
              action="/cart-delete-item"
              method="POST"
            >
              <input
                type="hidden"
                value="<%= p.productId._id %>"
                name="productId"
              />
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="btn ms-2">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </div>
        </td>

        <!-- TOTAL -->
        <td class="text-end">$<%= p.quantity * p.productId.price %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- SUBTOTAL -->


  <div class="row py-5">
    <div class="col-lg-3 order-lg-2">
      <div class="subtotal">
        <span class="larger-font me-5">Subtotal</span>
        <span class="larger-font float-end"> $<%= totalPrice %> </span>
      </div>
      <a href="/checkout" class="btn btn-outline-dark float-end w-100 my-3"
        >Checkout (<%= (totalQty) > 1 ? totalQty + ' items' : totalQty + ' item'
        %>)</a
      >
    </div>
    <div class="col-lg-9 my-3 order-lg-1">
      <a class="link" href="/shop-all">Coontinue shopping</a>
    </div>
  </div>
</div>
</div>
<% } else { %>
<!-- EMPTY CART -->
<div class="container-md text-center mt-5 py-5">
  <h1 class="py-5">Your cart is empty</h1>
  <a class="btn btn-outline-dark" href="/shop-all">Start Shopping</a>
  <% if (!isAuthenticated) {%>
  <p class="mt-3">Or</p>
  <a href="/login" class="link">Log In</a> for a faster checkout
  <% } %>
</div>
<% } %>
