<%- include('../partials/head.ejs') %>
  <link rel="stylesheet" href="/css/shop/index.css" />
  <link rel="stylesheet" href="/vendor/owl.carousel.css" />
  <link rel="stylesheet" href="/vendor/owl.theme.default.css" />
</head>

<body>
  
  <%- include('../partials/navbar')%>
  <div class="promo-text">FREE shipping on orders over $50 today</div>
  <div class="promo-text-space"></div>

  <div class="center-container">
    <main class="main-container">

      <div
        id="carouselExampleAutoplaying"
        class="carousel slide"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">

          <div class="carousel-item active">
            <img class="d-block" src="images/slides/slide1.jpg" alt="First slide" />
            <div class="carousel-caption caption-top d-md-block">
              <h3>Explore our amazing products!</h3>
            </div>
            <div class="carousel-caption d-md-block">
              <a href="/shop-all" class="link">Shop now ></a>
            </div>
          </div>

          <div class="carousel-item">
            <img
              class="d-block"
              src="images/slides/slide2.jpg"
              alt="Second slide"
            />
          </div>
          
          <div class="carousel-item">
            <img class="d-block" src="images/slides/slide3.jpg" alt="Third slide" />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleAutoplaying"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <!-- Best Sellers -->
      <% if (bestSellers) {%>

      <div class="row my-5">
        <h1 class="text-center">Best Sellers</h1>
        <p class="fw-dark w-75 mx-auto my-4 text-center font-sz-lg-font">
          Discover our most popular skincare products that have captured the hearts
          of thousands of customers. These best sellers are carefully curated to
          address your skin's specific needs and deliver exceptional results.
        </p>
      </div>

      <div class="row g-4 my-5 mx-auto owl-carousel owl-theme">
        <% for (let product of bestSellers) {%>
        <div class="col px-1 mx-auto">
          <div class="overflow-hide">
            <a href="/shop-all/<%= product.productId._id  %>">
              <img
                class="img-fluid d-block mx-auto hover-scale"
                src="<%= product.productId.image %>"
                alt=""
              />
            </a>
          </div>
          <a
            href="/shop-all/<%= product.productId._id  %>"
            class="d-block py-2 overflow-hide link"
          >
            <%= product.productId.title %>
          </a>
          <span>$<%= product.productId.price %></span>
        </div>
        <%} %>
      </div>
      <%} %>

      <!-- Info Section -->

      <div class="my-4">
        <div class="row">
          <div class="col-md-8">
            <a href="/brand">
              <div class="image-wrapper">
                <div class="image-text mx-4 my-4 hover-scale">
                  <h1 class="text-light">Daily Essentials</h1>
                </div>
                <img
                  class="d-block w-100 hover-scale"
                  src="images/brand/brand1.jpg"
                  alt="DailyEssentials"
                />
              </div>
            </a>
          </div>

          <div class="col-md-4">
            <a href="/research/uv">
              <div class="image-wrapper justify-content-end">
                <div class="image-text my-4 hover-scale">
                  <h1 class="text-light mx-4">UV Protection</h1>
                </div>
                <img
                  class="d-block w-100 img-opacity hover-scale"
                  src="images/research/uv1.jpg"
                  alt="UVProtection"
                />
              </div>
            </a>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <a href="/research/organic">
              <div class="image-wrapper justify-content-end align-items-end">
                <div class="image-text mx-4 my-4 hover-scale">
                  <h1 class="text-dark">100% Organic</h1>
                </div>
                <img
                  class="d-block w-100 hover-scale"
                  src="images/research/organic1.jpg"
                  alt="Organic"
                />
              </div>
            </a>
          </div>

          <div class="col-md-8">
            <a href="/routine">
              <div class="image-wrapper">
                <div class="image-text mx-4 my-4 hover-scale">
                  <h1 class="text-light">Perfect Routine</h1>
                </div>
                <img
                  class="d-block w-100 img-opacity hover-scale"
                  src="images/success/success5.jpg"
                  alt="3EasySteps"
                />
              </div>
            </a>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8">
            <a href="https://www.instagram.com/luminaeskincare" target="_blank">
              <div class="image-wrapper">
                <div class="image-text mx-4 my-4 hover-scale">
                  <h1 class="text-light h2">Instagram @luminaeskincare</h1>
                </div>
                <img
                  class="d-block w-100 hover-scale"
                  src="images/success/success4.jpg"
                  alt="Instagram"
                />
              </div>
            </a>
          </div>

          <div class="col-md-4">
            <a href="/success">
              <div class="image-wrapper">
                <div class="image-text mx-4 my-4 hover-scale">
                  <h1 class="text-light">Success Stories</h1>
                </div>
                <img
                  class="d-block w-100 hover-scale"
                  src="images/success/success6.jpg"
                  alt="Success"
                />
              </div>
            </a>
          </div>
        </div>
      </div>


    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
      integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script> 
    <script src="/vendor/owl.carousel.js"></script>
    <script src="/js/owl-carousel.js"></script>
<%- include('../partials/end')%>
