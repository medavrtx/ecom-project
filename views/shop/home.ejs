<% layout('layouts/boilerplate')%>

<div class="promo-text">FREE shipping on orders over $50 today</div>

<div class="main-container">
  <div
    id="carouselExampleAutoplaying"
    class="carousel slide"
    data-bs-ride="carousel"
  >
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block" src="images/slides/slide1.jpg" alt="First slide" />
      </div>
      <div class="carousel-item">
        <img
          class="d-block"
          src="images/slides/slide2.jpg"
          alt="Second slide"
        />
      </div>
      <div class="carousel-item">
        <img class="d-block" src="images/slides/slide3.jpg" alt="Third slide" />
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Best Sellers -->
  <% if (bestSellers) {%>

  <div class="row my-5">
    <h1 class="text-center">Best Sellers</h1>
    <p class="fw-dark w-75 mx-auto my-4 text-center larger-font">
      Discover our most popular skincare products that have captured the hearts
      of thousands of customers. These best sellers are carefully curated to
      address your skin's specific needs and deliver exceptional results.
    </p>
  </div>

  <div class="row g-4 my-5 mx-auto owl-carousel owl-theme">
    <% for (let product of bestSellers) {%>
    <div class="col product-item mx-auto">
      <div class="product-img">
        <a href="/shop-all/<%= product.productId._id  %>">
          <img
            class="img-fluid d-block mx-auto img-hover"
            src="<%= product.productId.image %>"
            alt=""
          />
        </a>
      </div>
      <a
        href="/shop-all/<%= product.productId._id  %>"
        class="d-block py-2 product-name link"
      >
        <%= product.productId.title %>
      </a>
      <span class="product-price">$<%= product.productId.price %></span>
    </div>
    <%} %>
  </div>
  <%} %>

  <!-- Info Section -->

  <div class="my-4">
    <div class="row">
      <div class="col-md-8">
        <a href="/brand">
          <div class="image-wrapper">
            <div class="image-text mx-4 my-4 img-hover">
              <h1 class="text-light">Daily Essentials</h1>
            </div>
            <img
              class="d-block w-100 img-hover"
              src="images/success/success1.jpg"
              alt="DailyEssentials"
            />
          </div>
        </a>
      </div>

      <div class="col-md-4">
        <a href="/research/uv">
          <div class="image-wrapper justify-content-end">
            <div class="image-text my-4 img-hover">
              <h1 class="text-light mx-4">UV Protection</h1>
            </div>
            <img
              class="d-block w-100 img-opacity img-hover"
              src="images/research/research1.jpg"
              alt="UVProtection"
            />
          </div>
        </a>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <a href="/research/organic">
          <div class="image-wrapper justify-content-end align-items-end">
            <div class="image-text mx-4 my-4 img-hover">
              <h1 class="text-dark">100% Organic</h1>
            </div>
            <img
              class="d-block w-100 img-hover"
              src="images/organic1.jpg"
              alt="Organic"
            />
          </div>
        </a>
      </div>

      <div class="col-md-8">
        <a href="/routine">
          <div class="image-wrapper">
            <div class="image-text mx-4 my-4 img-hover">
              <h1 class="text-light">Perfect Routine</h1>
            </div>
            <img
              class="d-block w-100 img-opacity img-hover"
              src="images/success/success5.jpg"
              alt="3EasySteps"
            />
          </div>
        </a>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <a href="https://www.instagram.com/luminaeskincare" target="_blank">
          <div class="image-wrapper">
            <div class="image-text mx-4 my-4 img-hover">
              <h1 class="text-light h2">Instagram @luminaeskincare</h1>
            </div>
            <img
              class="d-block w-100 img-hover"
              src="images/success/success4.jpg"
              alt="Instagram"
            />
          </div>
        </a>
      </div>

      <div class="col-md-4">
        <a href="/success">
          <div class="image-wrapper">
            <div class="image-text mx-4 my-4 img-hover">
              <h1 class="text-light">Success Stories</h1>
            </div>
            <img
              class="d-block w-100 img-hover"
              src="images/success/success6.jpg"
              alt="Success"
            />
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
