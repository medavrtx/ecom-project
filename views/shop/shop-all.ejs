<% layout('layouts/boilerplate')%>

<div class="my-5">
  <h1 class="center-title">Shop All</h1>
</div>
<div class="category-links">
  <a href="#">Kits</a>
  <a href="#">Skincare</a>
  <a href="#">Sun Protection</a>
</div>
<div class="container-lg">
  <div class="row mx-5">
    <!-- Products List -->
    <div class="col-12">
      <% if (products) { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 align-items-start">
        <% for( let product of products ) { %>
        <div class="col mb-4">
          <div class="card">
            <a href="/shop/<%= product._id %>">
              <div class="product-img">
                <img
                  class="img-fluid d-block mx-auto img-hover"
                  src="<%= product.image %>"
                  alt="<%= product.title %>"
                />
              </div>
            </a>
            <p
              href="#"
              class="d-block text-dark text-decoration-none py-2 my-0 product-name"
            >
              <%= product.title %>
            </p>
            <span class="product-price">$<%= product.price %></span>
            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>

  <div class="content">
    <div class="home-title"></div>
  </div>
</div>
