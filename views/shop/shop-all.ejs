<% layout('layouts/boilerplate')%>

<div class="container">
  <div class="row my-5">
    <h1>Shop All</h1>
  </div>
  <div class="row">
    <div class="col-2">
      <div class="sm-display py-3">
        <h5
          class="dropdown-toggle"
          id="navbarDarkDropdownMenuLink"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapseExample"
          aria-expanded="false"
          aria-controls="collapseExample"
        >
          Products
        </h5>
        <ul class="product-types link-list collapse" id="collapseExample">
          <li><a href="#">Kits</a></li>
          <li><a href="#">Skincare</a></li>
          <li><a href="#">Sun Protection</a></li>
        </ul>
      </div>
      <div class="lg-display">
        <h5>Products</h5>
        <ul class="product-types link-list">
          <li><a href="#">Kits</a></li>
          <li><a href="#">Skincare</a></li>
          <li><a href="#">Sun Protection</a></li>
        </ul>
      </div>
    </div>

    <!-- Products List -->
    <div class="col-10">
      <% if (products) { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 align-items-start">
        <% for( let product of products ) { %>
        <div class="col mb-4">
          <div class="card">
            <a href="/shop/<%= product._id %>">
              <div class="product-img">
                <img
                  class="img-fluid d-block mx-auto img-hover"
                  src="<%= product.image %>"
                  alt="<%= product.title %>"
                />
              </div>
            </a>
            <a
              href="#"
              class="d-block text-dark text-decoration-none py-2 product-name"
              ><%= product.title %></a
            >
            <span class="product-price">$<%= product.price %></span>
            <%- include('../includes/add-to-cart.ejs', {product: product}) %>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>

  <div class="content">
    <div class="home-title"></div>
  </div>
</div>
