  <body>
    <%- include ('../includes/nav.ejs') %> 
    <div class="page-wrap">
      <div class="content">
        <div class="nav-spacer"></div>
        <form class="product-form" action='/admin/add-product' method='POST'>
          <div class="title-row">
            <div class="form-control ">
              <label for='title' id="title">Title</label>
              <input type='text' name='title' id="title" />
            </div>
            <div class="form-control ">
              <label for='price'>Price</label>
              <div class="price">
                <span id="dollar-sign">$</span>
                <input type='number' name='price' id="price" />
              </div>
            </div>
          </div>
          <div class="form-control ">
            <label for='Description'>Description</label>
            <textarea rows='10' name='description' id="description" ></textarea>
          </div>
          <div class="form-control ">
            <label for='image'>Image</label>
            <input type='text' name='image' id="image" />
          </div>
          <div class="form-control ">
            <label for='colorOptions'>Color Options</label>
            <div>
              <input type='text' name='colorOptions' id="colorOptions" />
              <button class="btn-primary">Add</button>
            </div>
          </div>
          <div class="form-control ">
            <label for='sizeOptions'>Size Options</label>
            <div>
              <input type='text' name='colorOptions' id="colorOptions" />
              <button class="btn-primary">Add</button>
            </div>
          </div>
          <button class="btn-primary form-btn" type='submit'>Continue</button>
        </form>
      </div>
    </div>
    <%- include ('../includes/footer.ejs')  %> 
  </body>
</html>