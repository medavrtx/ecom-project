<% layout('layouts/boilerplate')%>

<div class="my-5">
  <h1 class="center-title"><%= pageTitle %></h1>
</div>

<div class="content py-0">
  <% if (errorMessage) {%>
  <div class="user-message text-danger"><%= errorMessage %></div>
  <% } %>

  <form
    action="/admin/<% if (editing) {%>edit-product<%} else {%>add-product<%} %>"
    method="POST"
    enctype="multipart/form-data"
    class="w-100"
  >
    <div class="row border mx-sm-5 rounded-3">
      <!-- IMAGE -->
      <div
        class="col-lg-6 d-flex flex-column align-items-center justify-content-center p-5"
      >
        <!-- IMAGE UPLOAD -->
        <div class="image-upload bg-light">
          <div id="form-image-area" class="image-area">
            <div class="upload-icon">
              <i class="fas fa-image"></i>
            </div>
            <p class="upload-text">
              Click here to
              <b>Add Image</b>
            </p>
          </div>

          <!-- IMAGE PREVIEW -->
          <% if (editing) {%>
          <div id="form-preview-container" class="preview-container d-block">
            <img
              src="/<%= product.image %>"
              alt="Product Image Preview"
              class="preview-image"
              id="form-preview-image"
            />
          </div>
          <% } else { %>
          <div id="form-preview-container" class="preview-container"></div>

          <% } %>
        </div>
      </div>

      <!-- DETAILS -->
      <div class="col-lg-6 p-5 d-flex flex-column justify-content-between">
        <!-- PRODUCT NAME -->
        <div class="row mb-3">
          <div class="col-md-12">
            <label for="title">Product name</label>
            <input
              class="form-control product-form-input"
              type="text"
              name="title"
              id="title"
              placeholder="Enter product name"
              value="<% if (editing || hasError) {%><%=product.title%><%} else {%><%} %>"
            />
          </div>
        </div>

        <!-- PRICE -->
        <div class="row mb-3">
          <div class="col-md-12">
            <label for="price">Price</label>
            <div class="input-group">
              <span class="input-group-text" id="dollar-sign">$</span>
              <input
                type="text"
                class="form-control product-form-input price-input"
                name="price"
                id="price"
                oninput="formatPriceInput(this)"
                placeholder="Price"
                value="<% if (editing || hasError) {%><%=product.price%><%} else {%><%} %>"
              />
            </div>
          </div>
        </div>

        <!-- DESCRIPTION -->
        <div class="row mb-3">
          <div class="col-md-12 custom-form">
            <label for="description">Description</label>
            <textarea
              class="form-control product-form-textarea"
              rows="5"
              name="description"
              id="description"
              placeholder="Enter description"
            >
<% if (editing || hasError) {%><%=product.description%><%} %></textarea
            >
          </div>
        </div>

        <!-- CATEGORIES -->
        <div class="row mb-3">
          <div class="col-md-12">
            <label for="category">Category</label>
            <select
              class="form-select product-form-select"
              name="category"
              id="category"
            >
              <option value="">Select a category</option>
              <option value="kits">Kits</option>
              <option value="skincare">Skincare</option>
              <option value="sun-protection">Sun Protection</option>
            </select>
          </div>
        </div>

        <!-- BUTTON -->
        <div>
          <button class="btn btn-outline-dark" type="submit">
            <% if (editing) {%>Update product<%} else {%>Add product<%} %>
          </button>
        </div>
      </div>
    </div>

    <% if (editing) {%>
    <input type="hidden" value="<%= product._id %>" name="productId" />
    <% } %>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <!-- The modal -->
    <div id="modal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>

        <!-- IMAGE UPLOAD -->
        <div id="modal-image-upload" class="image-upload bg-light">
          <label class="image-area" for="modal-file-input">
            <div class="upload-icon">
              <i class="fas fa-image"></i>
            </div>
            <p class="upload-text">Drop your image here</p>
            <p class="upload-text">or <b>click to browse</b></p>

            <input type="file" id="modal-file-input" accept="image/*" />
          </label>
          <% if (editing) { %>
          <div id="modal-preview-container" class="preview-container d-block">
            <img
              src="/<%= product.image %>"
              alt="Product Image Preview"
              class="preview-image"
              id="modal-preview-image"
            />
          </div>
          <% } else { %>
          <div id="modal-preview-container" class="preview-container"></div>
          <% } %>
        </div>

        <div class="d-flex justify-content-end my-3">
          <a class="btn btn-outline-dark me-3" id="cancelButton">Cancel</a>
          <a class="btn btn-outline-dark" id="saveButton">Save</a>
        </div>
      </div>
    </div>
  </form>
</div>
