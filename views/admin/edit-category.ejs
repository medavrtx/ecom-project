<% layout('layouts/boilerplate') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../partials/sidebar')%>

    <div class="col-lg-10">
      <div class="my-5">
        <h1 class="center-title"><%= pageTitle %></h1>
      </div>

      <div class="container-lg mt-4">
        <!-- CATEGORY NAME -->
        <div class="row mx-5">
          <div class="col-lg-4">
            <h2>Category Name</h2>
            <form
              action="/admin/update-category/<%= category._id %>"
              method="POST"
            >
              <div class="form-group">
                <label for="title"></label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  placeholder="Category name"
                  value="<%= category.title %>"
                  required
                />
              </div>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button type="submit" class="btn btn-outline-dark mt-3">
                Update Name
              </button>
            </form>
          </div>
        </div>

        <!-- PRODUCTS IN CATEGORY -->

        <div class="row mx-5 my-5">
          <div class="col-lg-12">
            <h2>Products in Category</h2>
            <div class="row">
              <% if (category.products.length === 0) { %>
              <div class="col-12">
                <p>No products found in this category.</p>
              </div>
              <% } else { %> <% category.products.forEach((product) => { %>
              <div class="col-lg-4 mb-4">
                <div class="card">
                  <a href="/admin/edit-product/<%= product.productId._id %>">
                    <div class="product-img">
                      <img
                        class="img-fluid d-block mx-auto img-hover"
                        src="/<%= product.productId.image %>"
                        alt="<%= product.productId.title %>"
                      />
                    </div>
                  </a>
                  <p
                    class="d-block text-dark text-decoration-none py-2 my-0 product-name"
                  >
                    <%= product.productId.title %>
                  </p>
                  <span class="product-price">
                    $<%= product.productId.price %>
                  </span>
                  <div class="btn-row my-2">
                    <a href="/admin/edit-product/<%= product.productId._id %>">
                      <button type="button" class="btn btn-outline-dark">
                        Edit Product
                      </button>
                    </a>
                    <form
                      action="/admin/remove-product-from-category/<%= category._id %>"
                      method="POST"
                    >
                      <input
                        type="hidden"
                        value="<%= product.productId._id %>"
                        name="productId"
                      />
                      <input
                        type="hidden"
                        name="_csrf"
                        value="<%= csrfToken %>"
                      />
                      <button class="btn btn-outline-danger" type="submit">
                        Remove from Category
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <% }) %> <% } %>
            </div>
          </div>
        </div>

        <!-- ADD PRODUCTS TO CATEGORY -->

        <div class="row mx-5 my-5">
          <div class="col-lg-6">
            <h2>Add Products to Category</h2>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <form
                action="/admin/add-product-to-category/<%= category._id %>"
                method="POST"
              >
                <div class="form-group">
                  <label for="product"></label>
                  <select
                    class="form-select"
                    id="product"
                    name="productId"
                    required
                  >
                    <option value="" selected disabled>Select a product</option>
                    <% products.forEach((product) => { %>
                    <option value="<%= product._id %>">
                      <%= product.title %>
                    </option>
                    <% }) %>
                  </select>
                </div>
                <button type="submit" class="btn btn-outline-dark mt-3">
                  Add Product to Category
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
