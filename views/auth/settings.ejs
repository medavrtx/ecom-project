<%- layout('layouts/boilerplate')%>

<nav aria-label="breadcrumb ">
  <ol class="breadcrumb ms-5 mt-2">
    <li class="breadcrumb-item">
      <a href="/user/<%=user._id %>" class="link">Your Account</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page"><%= pageTitle %></li>
  </ol>
</nav>
<div class="content">
  <h1 class="orders-title"><%= pageTitle %></h1>
  <% if (errorMessage) {%>
  <div class="user-message text-danger"><%= errorMessage %></div>
  <% } %>
  <div class="row w-75">
    <div class="col-md-6 offset-md-3">
      <form action="/user/<%=user._id %>/settings" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control box-form-input"
            id="email"
            name="email"
            value="<%= user.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="firstName" class="form-label">First Name</label>
          <input
            type="text"
            class="form-control box-form-input"
            id="firstName"
            name="firstName"
            value="<%= user.firstName %>"
          />
        </div>
        <div class="mb-3">
          <label for="lastName" class="form-label">Last Name</label>
          <input
            type="text"
            class="form-control box-form-input"
            id="lastName"
            name="lastName"
            value="<%= user.lastName %>"
          />
        </div>
        <div class="mb-3">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control box-form-input"
          />
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit" class="btn btn-outline-dark">Save Changes</button>
      </form>
      <p class="mt-3">
        <a class="link" href="/reset">Change Password</a>
      </p>
    </div>
  </div>
</div>
