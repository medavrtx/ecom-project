<% layout('layouts/boilerplate')%>
<div class="my-5">
  <h1 class="center-title">Sign In</h1>
</div>

<div class="content">
  <% if (errorMessage) {%>
  <div class="user-message text-danger"><%= errorMessage %></div>
  <% } %>
  <div class="row">
    <div class="col-md-6">
      <form action="/login" method="POST">
        <!-- EMAIL -->
        <div class="form-group custom-form">
          <label for="email"></label>
          <input
            type="email"
            name="email"
            class="form-control"
            id="email"
            placeholder="Email"
            value="<%=oldInput.email%>"
          />
        </div>

        <!-- PASSWORD -->
        <div class="form-group custom-form">
          <label for="password"></label>
          <input
            class="form-control"
            type="text"
            name="password"
            id=""
            placeholder="Password"
          />
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <!-- BUTTON -->
        <button type="submit" class="btn btn-outline-dark my-3 w-100">
          Sign In
        </button>

        <!-- RESET -->
        <p class="mt-3">
          <a class="link" href="/reset">Reset Password</a>
        </p>
      </form>
    </div>

    <!-- REGISTER -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <p class="card-text">Check out faster by creating an account.</p>
          <a href="/registration" class="btn btn-outline-dark"
            >Create Account</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
