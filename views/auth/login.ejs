<% layout('layouts/boilerplate')%>
<div class="content">
  <div class="nav-spacer"></div>
  <h1><%= pageTitle %></h1>
  <% if (errorMessage) {%>
  <div class="user-message user-message--error"><%= errorMessage %></div>
  <% } %>
  <div class="user-sign-main">
    <form class="user-sign-in" action="/login" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input type="text" name="email" id="" value="<%=oldInput.email%>" />
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input type="text" name="password" id="" />
      </div>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <div class="form-control">
        <button class="btn-primary" type="submit">Sign In</button>
      </div>
      <a class="reset-link" href="/reset">Reset Password</a>
    </form>
    <div class="user-register">
      <h3>Register</h3>
      <p>Check out faster by creating an account.</p>
      <a href="/registration">
        <button class="btn-primary">Create Account</button>
      </a>
    </div>
  </div>
</div>
