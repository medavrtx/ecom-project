<% layout('layouts/boilerplate')%>

<div class="my-5">
  <h1 class="center-title">Register</h1>
</div>

<div class="content">
  <% if (errorMessage) {%>
  <div class="user-message text-danger"><%= errorMessage %></div>
  <% } %>

  <div class="row w-75">
    <div class="col-md-6 offset-md-3">
      <form action="/registration" method="POST">
        <div class="form-group custom-form">
          <label for="email"></label>
          <input
            type="email"
            name="email"
            class="form-control"
            id="email"
            placeholder="Email"
            value="<%=oldInput.email%>"
          />
        </div>
        <div class="form-group custom-form">
          <label for="firstName"></label>
          <input
            type="text"
            name="firstName"
            class="form-control"
            id="firstName"
            placeholder="First name"
            value="<%= oldInput.firstName%>"
          />
        </div>
        <div class="form-group custom-form">
          <label for="lastName"></label>
          <input
            type="text"
            name="lastName"
            class="form-control"
            id="lastName"
            placeholder="Last name"
            value="<%= oldInput.lastName%>"
          />
        </div>
        <div class="form-group custom-form">
          <label for="password"></label>
          <input
            type="password"
            name="password"
            class="form-control"
            id="password"
            placeholder="Password"
            value="<%= oldInput.password%>"
          />
        </div>
        <div class="form-group custom-form">
          <label for="confirmPassword"></label>
          <input
            type="password"
            name="confirmPassword"
            class="form-control"
            id="confirmPassword"
            placeholder="Confirm password"
          />
        </div>
        <div class="form-group form-check my-4">
          <input
            type="checkbox"
            name="agreement"
            class="form-check-input small"
            id="agreement"
          />
          <label class="form-check-label small" for="agreement">
            By providing my information, I agree to LUMINAE's
            <a href="privacy-policy.html">Privacy Policy</a>
          </label>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <button type="submit" class="btn btn-outline-dark w-100">
          Create Account
        </button>
      </form>
      <p class="mt-5 text-center">
        Already have an account? <a href="/login">Sign In</a>
      </p>
    </div>
  </div>
</div>
