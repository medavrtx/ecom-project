<header class="main-header">
  <nav class="main-header__nav">
    <div class="main-header__logo">
      <h3>ECOM</h3>
    </div>
    <ul class="main-header__item-list">
      <li class="main-header__item"><a href="/">Products</a></li>
      <li class="main-header__item"><a href="/info">Info</a></li>
      <% if (isAuthenticated) { %> 
        <% if (isAdmin) { %> 
          <li class="main-header__item">
            <a href="/admin/add-product">Add Product</a>
          </li>
          <li class="main-header__item"><a href="/admin">Admin</a></li>
          <% } %> 
      <li class="main-header__item"><a href="/user/<%= user._id %>">Account</a></li>
      <li class="main-header__item">
        <form class="cart-product-delete" action="/logoutuser" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button class="btn-nonbutton" type="submit">
            Logout
          </button>
        </form>
      </li>
      <% } else { %>
        <li class="main-header__item"><a href="/login">Sign In</a></li>
      <% } %>  
      <a href="/cart">
        <div class="imagebox" >
          <div class="cart" />
      </div>
    </a>
    </ul>
  </nav>
</header>
