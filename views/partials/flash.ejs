<% if (success !== undefined && success.length) {%>
<div class="alert alert-success alert-dismissible fade show z-index-4 flash" role="alert">
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (error && error.length) {%>
<div class="alert alert-danger alert-dismissible fade show z-index-4 flash" role="alert">
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
